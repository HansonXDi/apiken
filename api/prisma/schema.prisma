generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios{
  //Clave primaria
  id Int @id @default(autoincrement())
  //Atributos
  direccion_correo String @unique
  contrasena String
  descripcion String @db.Text
  fecha_creacion DateTime @default(now())
  nombre String
  direcciones_bloqueadas Direcciones_Bloqueadas[]
  direcciones_favoritas Direcciones_Favoritas[]
}

model Direcciones_Bloqueadas{
  //Clave primaria
  id Int @id @default(autoincrement())
  //Atributos
  direccion_bloqueada  String
  //Relaciones
  usuarios_que_lo_bloquean Usuarios[]
}

model Direcciones_Favoritas{
  //Clave primaria
  id Int @id @default(autoincrement())
  //Claves foraneas
  usuario_id Int
  //Atributos
  direccion_favorita String
  //Relaciones
  usuarios_que_hacen_favorito Usuarios[]
}